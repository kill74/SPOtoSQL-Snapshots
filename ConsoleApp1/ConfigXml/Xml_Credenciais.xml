<SharePointSnapshotTool>
	<!--This will be the Sql config-->
	<SqlServer>
		<Server>localhost</Server>
		<Database>DataBase</Database>
		<Username>sql-UserName</Username>
		<Password>sql-Password</Password>
	</SqlServer>
	<!-- -->
	<SharePoint>
		<BaseUrl>https://bringglobal.sharepoint.com/Pages/home.aspx</BaseUrl>
		<!-- This will be the authentication to the site -->
		<AuthenticationType>SharePointOnline</AuthenticationType>
		<!-- Its better to use the email instead of the email -->
		<Username>user@gmail.com</Username>
		<Password>password</Password>
	</SharePoint>
	<Security>
		<EncryptCredentials>true</EncryptCredentials>
		<EncryptionKey>your-encryption-key</EncryptionKey>
	</Security>
	<SharePointLists>
		<List>
			<SiteUrl>/sites/yoursite</SiteUrl>

			<ListTitle>Sharepoint_List_Name</ListTitle>

			<SqlTable>SQL_table_name</SqlTable>

			<AutoAddNewColumns>true</AutoAddNewColumns >

			<Disabled>true_or_false</Disabled>
			<!-- optional, default is false. If true, skip this list -->
			<ColumnMappings>
				<Mapping>

					<SharepointColumn>Sharepoint_column_name</SharepointColumn>

					<SqlColumn>SQL_column_name</SqlColumn>

					<SqlDataType>NVARCHAR(255)</SqlDataType>

					<IgnoreColumn>true_or_false</IgnoreColumn>
					<!-- optional, default is false. If true skip column-->
				</Mapping>
				<Mapping>
					<!-- As many Mapping tags as needed to map columns from sharepoint to sql -->
				</Mapping>
			</ColumnMappings>
		</List>
	</SharePointLists>
</SharePointSnapshotTool>